<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profileFirstName" />

        <EditText
            android:id="@+id/profileFirstName"
            style="@style/text_defaultEdit"
            android:inputType="textPersonName"
            android:hint="@string/hintFirstName" />


        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profileLastName" />

        <EditText
            android:id="@+id/profileLastName"
            style="@style/text_defaultEdit"
            android:inputType="textPersonName"
            android:hint="@string/hintLastName" />


        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profileEmail" />

        <EditText
            android:id="@+id/profileEmail"
            style="@style/text_defaultEdit"
            android:inputType="textPersonName"
            android:hint="@string/hintEmail" />


        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profilePhone" />

        <EditText
            android:id="@+id/profilePhone"
            style="@style/text_defaultEdit"
            android:inputType="textPersonName"
            android:hint="@string/hintPhone" />


        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profileAddress" />

        <EditText
            android:id="@+id/profileAddress"
            style="@style/text_defaultEdit"
            android:inputType="textPersonName"
            android:hint="@string/hintAddress" />



        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profileCity" />

        <EditText
            android:id="@+id/profileCity"
            style="@style/text_defaultEdit"
            android:inputType="textPersonName"
            android:hint="@string/hintCity" />


        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profilePostalCode" />

        <EditText
            android:id="@+id/profilePostalCode"
            style="@style/text_defaultEdit"
            android:inputType="textPersonName"
            android:hint="@string/hintPostalCode" />


        <Button
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="onClickBtnUpdate"
            android:text="@string/updateButton"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>