<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profileFirstName" />

        <EditText
            android:id="@+id/profileFirstName"
            style="@style/text_defaultEdit"
            android:inputType="textPersonName"
            android:hint="@string/profileFirstName" />


        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profileLastName" />

        <EditText
            android:id="@+id/profileLastName"
            style="@style/text_defaultEdit"
            android:inputType="textPersonName"
            android:hint="@string/profileLastName" />


        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profileEmail" />

        <EditText
            android:id="@+id/profileEmail"
            style="@style/text_defaultEdit"
            android:hint="@string/profileEmail"
            android:inputType="textEmailSubject"
            android:digits="@string/digits_email"/>


        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profilePhone" />

        <EditText
            android:id="@+id/profilePhone"
            style="@style/text_defaultEdit"
            android:hint="@string/profilePhone"
            android:inputType="phone"
            android:digits="@string/digits_phone"/>


        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profileAddress" />

        <EditText
            android:id="@+id/profileAddress"
            style="@style/text_defaultEdit"
            android:hint="@string/profileAddress"
            android:inputType="text"
            android:digits="@string/digits_address"/>



        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profileCity" />

        <EditText
            android:id="@+id/profileCity"
            style="@style/text_defaultEdit"
            android:hint="@string/profileCity"
            android:inputType="text"
            android:digits="@string/digits_alphabetsOnly"/>


        <TextView
            style="@style/text_defaultLabel.bold"
            android:text="@string/profilePostalCode" />

        <EditText
            android:id="@+id/profilePostalCode"
            style="@style/text_defaultEdit"
            android:hint="@string/profilePostalCode"
            android:inputType="text"
            android:digits="@string/digits_alphabetsNumbers"/>


        <Button
            style="@style/btn_default"
            android:layout_width="170dp"
            android:text="@string/btnUpdate"
            android:onClick="onClickBtnUpdate" />

    </LinearLayout>

</ScrollView>